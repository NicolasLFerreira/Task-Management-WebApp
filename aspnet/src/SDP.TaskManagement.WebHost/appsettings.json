{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=taskmanagementdb;Username=default;Password=default"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Jwt": {
    "Key": "ThisIsMySecretKey12345ThisIsMySecretKey12345",
    "Issuer": "TaskManagementApp",
    "Audience": "TaskManagementAppUsers",
    "ExpiryMinutes": 60
  },
  "FileStorage": {
    "BasePath": "attachments",
    "MaxFileSizeBytes": 10485760,
    "AllowedFileTypes": [".jpg", ".jpeg", ".png", ".pdf", ".doc", ".docx", ".xls", ".xlsx", ".txt"],
    "ProfilePhotoDirectory": "profile-photo",
    "AttachmentsDirectory": "attachments"
  },
  "Cors": {
    "AllowedOrigins": ["http://localhost:3000", "http://localhost:5173"]
  }
}
